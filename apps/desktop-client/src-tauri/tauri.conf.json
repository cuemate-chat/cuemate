{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "productName": "CueMate",
  "mainBinaryName": "CueMate",
  "version": "0.1.0",
  "identifier": "com.cuemate.desktop",
  "plugins": {},
  "app": {
    "windows": [
      {
        "label": "control-bar",
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "title": "CueMate",
        "width": 360,
        "height": 100,
        "alwaysOnTop": true,
        "visible": true,
        "center": true,
        "skipTaskbar": true,
        "minimizable": true,
        "maximizable": false,
        "titleBarStyle": "Overlay",
        "shadow": false,
        "hiddenTitle": true,
        "url": "src/windows/control-bar/index.html",
        "closable": false,
        "focus": false,
        "acceptFirstMouse": true
      },
      {
        "label": "close-button",
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "title": "Close Button",
        "width": 400,
        "height": 50,
        "alwaysOnTop": true,
        "visible": true,
        "center": false,
        "skipTaskbar": true,
        "minimizable": false,
        "maximizable": false,
        "titleBarStyle": "Overlay",
        "shadow": false,
        "hiddenTitle": true,
        "url": "src/windows/close-button/index.html",
        "closable": false,
        "focus": false,
        "acceptFirstMouse": true
      },
      {
        "label": "main-content",
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "title": "CueMate 主应用",
        "width": 1200,
        "height": 800,
        "alwaysOnTop": false,
        "visible": false,
        "center": true,
        "skipTaskbar": false,
        "minimizable": true,
        "maximizable": true,
        "titleBarStyle": "Visible",
        "shadow": true,
        "hiddenTitle": false,
        "url": "http://localhost:80",
        "closable": true,
        "focus": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "macOSPrivateApi": true
  }
}