{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "composite": false,
        "skipLibCheck": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}
