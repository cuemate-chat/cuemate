{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:5173",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "CueMate",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "clipboard": {
                "all": true
            },
            "notification": {
                "all": true
            },
            "process": {
                "all": true
            },
            "fs": {
                "all": true
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": [
                "dmg",
                "updater"
            ],
            "identifier": "com.cuemate.app",
            "icon": [
                "icons/icon.icns"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "title": "CueMate",
                "width": 400,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "alwaysOnTop": true,
                "transparent": true,
                "decorations": false,
                "skipTaskbar": false
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        }
    }
}