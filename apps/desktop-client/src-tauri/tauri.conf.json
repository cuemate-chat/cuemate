{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "productName": "CueMate",
  "mainBinaryName": "CueMate",
  "version": "0.1.0",
  "identifier": "com.cuemate.desktop",
  "plugins": {},
  "app": {
    "windows": [
      {
        "label": "control-bar",
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "title": "CueMate",
        "width": 400,
        "height": 50,
        "alwaysOnTop": true,
        "visible": true,
        "center": true,
        "skipTaskbar": true,
        "minimizable": true,
        "maximizable": false,
        "acceptFirstMouse": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "macOSPrivateApi": true
  }
}