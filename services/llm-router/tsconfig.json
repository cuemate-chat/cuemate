{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "isolatedModules": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}