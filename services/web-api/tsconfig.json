{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@cuemate/data-sqlite": [
        "../../packages/data-sqlite/src"
      ],
      "@cuemate/logger": [
        "../../packages/logger/src"
      ],
      "@cuemate/logger/*": [
        "../../packages/logger/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}